<h1 class="title is-1">All Products</h1>

<div class="field">
  <label class="label">Filter by Category</label>
  <div class="control">
    <div class="select">
      <select onchange="window.location.href='/?category=' + this.value">
        <option value="">All Products</option>
        <% @categories.each do |category| %>
          <option value="<%= category.id %>" <%= "selected" if @selected_category == category %>>
            <%= category.name %>
          </option>
        <% end %>
      </select>
    </div>
  </div>
</div>

<% if @selected_category %>
  <p class="has-text-weight-bold">
    Showing products in: <%= @selected_category.name %>
  </p>
<% end %>

<form action="<%= products_path%>" method="get">
  <div class="columns is-multiline">
    <% @products.each do |product| %>
      <div class="column is-one-quarter">
        <%= link_to product_path(product), class: "card", style: "display:block; color:inherit;" do %>
          <div class="card-image">
            <figure class="image is-4by3">
              <img src="<%= product.image_url %>" alt="<%= product.name %>">
            </figure>
          </div>
          <div class="card-content">
            <p class="title is-5"><%= product.name %></p>
            <p class="subtitle is-6"><%= number_to_currency(product.price) %></p>
          </div>
        <% end %>
      </div>
    <% end %>
  </div>
</form>

<div>
  <%= paginate @products, params: { category: params[:category] } %>
</div>