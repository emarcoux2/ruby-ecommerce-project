<h1>Past Orders</h1>

<% @orders.each do |order| %>
  <div class="order-card">
    <p>Order #: <%= order.id %></p>
    <p>Date: <%= order.order_date.strftime("%b %d, %Y") %></p>
    <p>Total: <%= number_to_currency(order.total_price) %></p>
    <p>Status: <%= order.status %></p>
    <p><%= link_to "View Details", orders_index_path(order) %></p>
  </div>
<% end %>
