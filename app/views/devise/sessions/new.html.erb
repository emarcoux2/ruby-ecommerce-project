<section class="section">
  <div class="container is-max-desktop">
    <div class="columns is-centered">
      <div class="column is-half">
        <div class="card">
          <div class="card-content">
            <h2 class="title is-3 has-text-centered mb-4">Sign In</h2>

            <%= render "devise/shared/error_messages", resource: resource %>

            <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>

              <div class="field">
                <label class="label"><%= f.label :email %></label>
                <div class="control">
                  <%= f.email_field :email, class: "input", autofocus: true, autocomplete: "email" %>
                </div>
              </div>

              <div class="field">
                <label class="label"><%= f.label :password %></label>
                <div class="control">
                  <%= f.password_field :password, class: "input", autocomplete: "current-password" %>
                </div>
              </div>

              <% if devise_mapping.rememberable? %>
                <div class="field">
                  <div class="control">
                    <label class="checkbox">
                      <%= f.check_box :remember_me %>
                      <span>Remember me</span>
                    </label>
                  </div>
                </div>
              <% end %>

              <div class="field mt-4">
                <div class="control">
                  <%= f.submit "Log In", class: "button is-primary is-fullwidth is-medium" %>
                </div>
              </div>

            <% end %>
            <div class="has-text-centered mt-4">
              <%= render "devise/shared/links" %>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>

