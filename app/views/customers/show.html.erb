<section class="section">
  <div class="container is-max-desktop">
    <h1 class="title is-1 has-text-centered mb-6">Account</h1>

    <div class="columns is-multiline">
      <div class="column is-full">
        <div class="card mb-4">
          <div class="card-content">
            <p class="is-size-6 has-text-grey">Username</p>
            <p class="is-size-5 has-text-weight-semibold"><%= current_customer.name %></p>
          </div>
        </div>
      </div>

      <div class="column is-full">
        <div class="card mb-4">
          <div class="card-content">
            <p class="is-size-6 has-text-grey">Primary Address</p>
            <% if @primary_address %>
              <p class="is-size-5">
                <%= @primary_address.street %><br>
                <%= @primary_address.city %>, <%= @primary_address.province %><br>
                <%= @primary_address.postal_code %>
              </p>
            <% else %>
              <p class="is-size-5 has-text-grey">
                No primary address set.
              </p>
            <% end %>
            <div class="mt-3">
              <%= link_to "View My Addresses", addresses_path, class: "button is-link" %>
            </div>
          </div>
        </div>
      </div>

      <div class="column is-full">
        <div class="card mb-4">
          <div class="card-content">
            <p class="is-size-6 has-text-grey">Most Recent Order</p>
            <% if @recent_order %>
              <p class="is-size-5 has-text-weight-semibold">
                Order #<%= @recent_order.id %> - <%= @recent_order.status %>
              </p>
              <p class="is-size-6">
                Placed on <%= @recent_order.order_date.strftime("%b %d, %Y") %>
              </p>
              <p class="is-size-5 has-text-success has-text-weight-semibold">
                Total: <%= number_to_currency(@recent_order.total_price/100.0) %>
              </p>
              <div class="mt-2">
                <%= link_to "View Details", order_path(@recent_order), class: "button is-link" %>
              </div>
            <% else %>
              <p class="is-size-5 has-text-grey">No orders yet.</p>
            <% end %>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>
